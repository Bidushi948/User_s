@{
     ViewBag.Title = "Add_user";
    Layout = "~/Views/_uLayout.cshtml";
}


<link href="~/css/font-awesome.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet"/>
<h1> Add New User </h1>
	<div class="clear-loading spinner">
		<span></span>
	</div>
	<div class="w3ls-login box box--big">
		<!-- form starts here -->
	<form action="Add_user" method="post">
	 <div class="agile-field-txt">
		 <label><i class="fa fa-user" aria-hidden="true"></i> User ID </label>
			<input type="text" name="name" placeholder="Enter User Id" required="" />
	 </div>
	 <div class="agile-field-txt">
		 <label><i class="fa fa-user" aria-hidden="true"></i> User Name  </label>
			<input type="text" name="name" placeholder="Enter User Name" required="" />
	 </div>
	 <div class="agile-field-txt">
				<label><i class="fa fa-unlock-alt" aria-hidden="true"></i> password </label>
				<input type="password" name="password" placeholder="Enter Password" required="" id="myInput" />
				<div class="agile-field-txt">
		 <label><i class="fa fa-user" aria-hidden="true"></i> Address </label>
			<input type="text" name="name" placeholder="Enter User's Address'" required="" />
			<div class="agile-field-txt">
		 <label><i class="fa fa-user" aria-hidden="true"></i> Phone No. </label>
			<input type="text" name="name" placeholder="Enter User's phone no'" required="" />
	 </div>
	 </div>
	</div>
	<div>
		<input type="submit" name=submit value="Submit"/>
		
	</div>
	
	</form>
</div>
