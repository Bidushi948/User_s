<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
   
  <style>
#userdetails {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#userdetails td, #userdetails th {
  border: 1px solid #ddd;
  padding: 8px;
}

#userdetails tr:nth-child(even){background-color: #f2f2f2;}

#userdetails tr:hover {background-color: #ddd;}

#userdetails th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
</style>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>
